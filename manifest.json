{
	"name": "Vizard",
	"description": "My first Chrome App.",
	"version": "0.1",
	"manifest_version": 2,
	"app": {
		"background": {
			"scripts": ["background.js"]
		}
	},
	"permissions": [
		"alarms",
		"audio",
		"audioCapture",
		"serial",
		"storage",
		"videoCapture"
	],
	"icons": { "16": "icon.jpg", "128": "icon.jpg" }
}